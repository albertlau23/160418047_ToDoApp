<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/toDoListFragment">

    <fragment
        android:id="@+id/toDoListFragment"
        android:name="com.example.a160418047_todoapp.view.ToDoListFragment"
        android:label="fragment_to_do_list"
        tools:layout="@layout/fragment_to_do_list" >
        <action
            android:id="@+id/actionAddToDo"
            app:destination="@id/createToDoFragment2"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/actionEditTodoFragment"
            app:destination="@id/editTodoFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/createToDoFragment2"
        android:name="com.example.a160418047_todoapp.view.CreateToDoFragment"
        android:label="fragment_create_to_do"
        tools:layout="@layout/fragment_create_to_do" />
    <fragment
        android:id="@+id/editTodoFragment"
        android:name="com.example.a160418047_todoapp.view.EditTodoFragment"
        android:label="EditTodoFragment" >
        <argument
            android:name="uuid"
            app:argType="integer" />
    </fragment>
</navigation>